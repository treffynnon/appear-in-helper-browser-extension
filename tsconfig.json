{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "dom",
      "es7"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "forceIsolatedModules": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}